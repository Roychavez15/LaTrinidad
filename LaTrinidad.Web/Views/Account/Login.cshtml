@model LaTrinidad.Web.Models.LoginViewModel
@{
    Layout = null;
}
<!doctype html>
<html lang="en" class="fullscreen-bg">
<head>
    <title>Login | La Trinidad</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <!-- App css -->
    <link href="~/klorofil/assets/css/bootstrap-custom.min.css" rel="stylesheet" type="text/css" />
    <link href="~/klorofil/assets/css/app.min.css" rel="stylesheet" type="text/css" />

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet">

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/klorofil/assets/images/favicon.png">
</head>
<body>

    <div class="vertical-align-wrap">
        <div class="vertical-align-middle">
            <div class="auth-box ">
                <div class="left">
                    <div class="content">
                        <div class="header">
                            <div class="logo text-center"><img src="~/images/logo-dark.png" alt="Klorofil Logo"></div>
                            <p class="lead">Login to your account</p>
                        </div>
                        <form method="post" class="form-auth-small">
                            <div class="form-group">
                                <label asp-for="Username" class="control-label sr-only">Email</label>
                                <input asp-for="Username" type="email" class="form-control" id="signin-email" placeholder="Email">
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label sr-only">Password</label>
                                <input asp-for="Password" type="password" class="form-control" id="signin-password" placeholder="Password">
                            </div>
                            <div class="form-group clearfix">
                                <label class="fancy-checkbox element-left custom-bgcolor-blue">
                                    <input type="checkbox">
                                    <span class="text-muted">Remember me</span>
                                </label>
                            </div>
                            <button type="submit" value="Login" class="btn btn-primary btn-lg btn-block">LOGIN</button>
                            <div class="bottom">
                                <span class="helper-text"><i class="fa fa-lock"></i> <a href="#">Forgot password?</a></span>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="right">
                    <div class="overlay"></div>
                    <div class="content text">
                        <h1 class="heading">Centro Medico LA TRINIDAD</h1>
                        <p>Sistema de Consultas</p>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <!-- App css -->
    <link href="~/klorofil/assets/css/bootstrap-custom.min.css" rel="stylesheet" type="text/css" />
    <link href="~/klorofil/assets/css/app.min.css" rel="stylesheet" type="text/css" />

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet">

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/klorofil/assets/images/favicon.png">

}
